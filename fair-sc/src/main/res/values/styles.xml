<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyToolbarTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OverFlowMenuTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@android:color/white</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="helperTextTextColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyMaterialButton.OutLine.White" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/font_user_card</item>
        <item name="rippleColor">#FF9e9e9e</item>
    </style>

    <style name="MyMaterialButton.OutLine.LikeFont" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/font_default</item>
        <item name="rippleColor">#FF9e9e9e</item>
    </style>

    <style name="MyMaterialButton.OutLine.Blue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="rippleColor">#FF9e9e9e</item>
    </style>

    <style name="MyMaterialButton.Edit" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">#FF9e9e9e</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="MyMaterialButton.OutLine.White.Default" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">#FF9e9e9e</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="strokeColor">@android:color/white</item>
    </style>

    <style name="MyMaterialButton.Normal" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">#FF9e9e9e</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">200dp</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/font_default</item>
    </style>

    <style name="transparentTextMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/font_tab</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/font_tab</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TopicToolBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="Matisse.Zhihu.Custom" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="toolbar">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="item.checkCircle.backgroundColor">@color/colorAccent</item>
    </style>

</resources>